"Load all of my settings
let g:vsvim = 0

"For quick commenting and uncommenting
let @c='0i//jzz'
let @d='^xxjzz'

let mapleader=' '
nnoremap <leader>p "*p
xnoremap <leader>p "*p
nnoremap <leader>q :q<cr>
xnoremap <C-c> "*y

nnoremap , @@zz

inoremap jk <esc>
inoremap kj <esc>

inoremap <C-k> <C-o>k
inoremap <C-h> <C-o>h
inoremap <C-l> <C-o>l
inoremap <C-j> <C-o>j

inoremap <C-BS> <C-w>
inoremap <C-S-BS> <C-u>

xnoremap > >gv
xnoremap < <gv

"highlight search looks hideous in vsvim
set nohlsearch
set number

" 'vip' switches to character selection, not line selection. Fix that
xnoremap ip ipV

set nowrapscan
set incsearch
set ignorecase
set smartcase
nnoremap n nzz
nnoremap N Nzz
nnoremap * *zz

"Keep indent level with 'cc'
nnoremap cc $v^c

"Fix the <leader>r mapping, since you can't map to `c_<Left>` in vsvim
nnoremap <leader>r yiw:%s/\<<C-r>"\>//g

"Visual commenting relies on the 'eval register' which doesn't work in
".vsvimrc. Default to c-style comments
xnoremap # :norm 0i//<cr>
xnoremap & :norm ^xx<cr>

" 'vv' and 'VV' are expression mappings, so they don't work in vsvim
nnoremap <leader>v ggVG$

"The .vsvim parses doesn't handle function calls, so we have to do these
"manually
set autoindent
set expandtab
set tabstop=4
set shiftwidth=4

nnoremap Q :q<cr>

xnoremap gt <esc>gt
xnoremap gT <esc>gT
